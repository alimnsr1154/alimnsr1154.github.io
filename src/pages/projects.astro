<style>
  :root {
    --primary: #6366f1;
    --primary-rgb: 99, 102, 241;
    --color: #e2e8f0;
    --text-light: #94a3b8;
    --card-bg: rgba(15, 23, 42, 0.6);
    --border-color: rgba(255, 255, 255, 0.1);
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .hero-section {
    text-align: center;
    margin-bottom: 4rem;
    padding: 2rem 0;
  }

  .hero-section h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, var(--color), var(--primary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--text-light);
    max-width: 800px;
    margin: 0 auto;
  }

  .highlight {
    color: var(--primary);
    font-weight: 600;
  }

  .project-section {
    margin-bottom: 4rem;
  }

  .section-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 2rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--primary);
  }

  .section-icon {
    font-size: 2rem;
    margin-top: 0.2rem;
  }

  .section-header h2 {
    font-size: 2rem;
    font-weight: 600;
    color: var(--color);
    margin: 0 0 0.25rem 0;
  }

  .section-header p {
    color: var(--text-light);
    margin: 0;
    font-size: 1rem;
    line-height: 1.5;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .coming-soon-card {
    display: flex;
    align-items: center;
    justify-content: center;
    grid-column: 1 / -1;
    height: 200px;
    border: 2px dashed var(--text-light);
    border-radius: 1rem;
    background: rgba(15, 23, 42, 0.3);
    transition: all 0.3s ease;
  }

  .coming-soon-card:hover {
    border-color: var(--primary);
    background: rgba(var(--primary-rgb), 0.1);
  }

  .coming-soon-content {
    text-align: center;
    padding: 1.5rem;
    max-width: 500px;
  }

  .coming-soon-content h3 {
    color: var(--color);
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
  }

  .coming-soon-content p {
    color: var(--text-light);
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }

  .progress-dots {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }

  .progress-dots span {
    display: inline-block;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--primary);
    opacity: 0.4;
    animation: pulse 1.5s infinite ease-in-out;
  }

  .progress-dots span:nth-child(2) {
    animation-delay: 0.2s;
  }

  .progress-dots span:nth-child(3) {
    animation-delay: 0.4s;
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.4; transform: scale(0.8); }
    50% { opacity: 1; transform: scale(1.1); }
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }
  }

  @media (max-width: 768px) {
    main {
      padding: 1rem;
    }

    .hero-section h1 {
      font-size: 2.5rem;
    }

    .hero-description {
      font-size: 1.1rem;
    }

    .section-header {
      flex-direction: column;
      gap: 0.5rem;
    }

    .section-icon {
      font-size: 1.5rem;
    }

    .coming-soon-card {
      height: 180px;
    }

    .coming-soon-content h3 {
      font-size: 1.3rem;
    }
  }

  @media (max-width: 480px) {
    .hero-section h1 {
      font-size: 2rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>